<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MerrMail.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MerrMail.Maui.Views"
    Title="MerrMail.Maui"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage"
        Shell.FlyoutBehavior="Disabled" />
    <ShellContent
        Title="Email Contexts"
        ContentTemplate="{DataTemplate views:EmailContextsPage}"
        Route="EmailContextsPage" />
</Shell>
