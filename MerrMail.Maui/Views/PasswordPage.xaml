<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MerrMail.Maui.Views.PasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MerrMail.Maui.ViewModels"
    Title="Enter Your Password"
    x:DataType="viewmodels:PasswordViewModel"
    Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout>
        <Label
            Grid.Column="0"
            HorizontalOptions="Center"
            Text="Password: " />
        <Entry Text="{Binding InputPassword}" />
        <Button Command="{Binding CheckPasswordCommand}" Text="Enter" />
        <Button Command="{Binding}" Text="Cancel" />
    </VerticalStackLayout>
</ContentPage>