<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MerrMail.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MerrMail.Maui.Views"
    Title="MerrMail.Maui"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="Add Account"
        ContentTemplate="{DataTemplate views:AddAccountPage}"
        FlyoutItemIsVisible="False"
        Route="AddAccountPage" />
    <ShellContent
        Title="Edit Email Context"
        ContentTemplate="{DataTemplate views:EditEmailContextPage}"
        FlyoutItemIsVisible="False"
        Route="EditEmailContextPage" />
    <ShellContent
        Title="Enter Your Password"
        ContentTemplate="{DataTemplate views:PasswordPage}"
        FlyoutItemIsVisible="False"
        Route="PasswordPage" />
    <ShellContent
        Title="Email Contexts"
        ContentTemplate="{DataTemplate views:EmailContextsPage}"
        Route="EmailContextsPage" />
    <ShellContent
        Title="Create Email Context"
        ContentTemplate="{DataTemplate views:CreateEmailContextPage}"
        FlyoutItemIsVisible="False"
        Route="CreateEmailContextPage" />
</Shell>
